{
  "name": "@hyperscape/impostor",
  "version": "0.1.0",
  "description": "Three.js library for creating and rendering octahedral impostors",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "rm -rf dist && tsc --project tsconfig.build.json && vite build --config vite.lib.config.ts",
    "build:demo": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:browser": "vitest --browser.enabled --browser.name=chromium --browser.provider=playwright",
    "clean": "rm -rf dist tsconfig.tsbuildinfo"
  },
  "keywords": [
    "three.js",
    "impostor",
    "octahedral",
    "billboard",
    "lod",
    "3d",
    "webgl"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "three": ">=0.182.0"
  },
  "devDependencies": {
    "@tweakpane/core": "^2.0.5",
    "@types/three": "0.182.0",
    "@vitest/browser": "^3.0.0",
    "jsdom": "^26.0.0",
    "playwright": "^1.50.0",
    "typescript": "~5.7.2",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^4.0.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "three": "0.182.0",
    "troika-three-text": "^0.52.3",
    "tweakpane": "^4.0.5"
  }
}

# Server Configuration
PORT=5555
WORLD=world

# PostgreSQL Database (automatically managed via Docker)
DATABASE_URL=postgresql://hyperscape:hyperscape_dev@localhost:5432/hyperscape
POSTGRES_CONTAINER=hyperscape-postgres
POSTGRES_USER=hyperscape
POSTGRES_PASSWORD=hyperscape_dev

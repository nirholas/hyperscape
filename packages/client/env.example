# Hyperscape Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# PRIVY AUTHENTICATION (Required for user login)
# ===========================================
# Get these from https://dashboard.privy.io/
# 1. Create a new app or select existing
# 2. Enable Farcaster login in settings
# 3. Copy your App ID and credentials

# Public (exposed to client)
PUBLIC_PRIVY_APP_ID=your-privy-app-id-here

# Server-side only (NEVER expose to client)
PRIVY_APP_ID=your-privy-app-id-here
PRIVY_APP_SECRET=your-privy-app-secret-here

# ===========================================
# FARCASTER FRAME V2 (Optional)
# ===========================================
# Enable if deploying as Farcaster mini-app
PUBLIC_ENABLE_FARCASTER=false

# Public URL for your deployed app (required for Farcaster)
# Example: https://your-game.vercel.app
PUBLIC_APP_URL=http://localhost:5555

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=5555
WORLD=world

# API URL for backend endpoints (optional, defaults to /api when empty)
# In production, set to your API server URL
# PUBLIC_API_URL=https://api.yourgame.com

# WebSocket URL (optional, auto-detected if not set)
PUBLIC_WS_URL=ws://localhost:5555/ws

# Assets URL (optional, defaults to /world-assets/)
PUBLIC_ASSETS_URL=http://localhost:5555/world-assets/

# ===========================================
# SECURITY
# ===========================================
# JWT secret for token signing (CHANGE IN PRODUCTION!)
JWT_SECRET=hyperscape-dev-secret-key-12345

# Admin code for admin access (optional)
# ADMIN_CODE=your-admin-code

# ===========================================
# OPTIONAL FEATURES
# ===========================================
# LiveKit for voice chat (optional)
# LIVEKIT_API_KEY=
# LIVEKIT_API_SECRET=
# LIVEKIT_URL=

# Player limit (optional, 0 = unlimited)
# PLAYER_LIMIT=100

# ===========================================
# MOBILE/CAPACITOR
# ===========================================
# For iOS/Android development with live reload
# Set to your local machine's IP address
# Find with: ipconfig getifaddr en0 (Mac) or hostname -I (Linux)
# CAP_SERVER_URL=http://192.168.1.100:5555

# ===========================================
# DEVELOPMENT
# ===========================================
# Node environment
NODE_ENV=development

# Vite dev server port (optional)
# VITE_PORT=3333

# Server origin for proxying (optional)
# SERVER_ORIGIN=http://localhost:5555

# DEBUG_RPG=1 
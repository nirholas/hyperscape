{
  "$schema": "https://schema.tauri.app/config/2/capability",
  "identifier": "mobile",
  "description": "Mobile-specific capabilities for Hyperscape",
  "platforms": ["android", "iOS"],
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:webview:default",
    "core:app:default",
    "core:event:default",
    "core:event:allow-emit",
    "core:event:allow-listen",
    "deep-link:default",
    "dialog:default",
    "http:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*.hyperscape.club/*"
        },
        {
          "url": "https://hyperscape-production.up.railway.app/*"
        },
        {
          "url": "wss://hyperscape-production.up.railway.app/*"
        },
        {
          "url": "https://*.up.railway.app/*"
        },
        {
          "url": "wss://*.up.railway.app/*"
        },
        {
          "url": "https://*.privy.io/*"
        }
      ]
    },
    "notification:default",
    "notification:allow-is-permission-granted",
    "notification:allow-request-permission",
    "notification:allow-notify",
    "opener:default",
    "opener:allow-open-url",
    "os:default",
    "os:allow-platform",
    "os:allow-arch",
    "process:default"
  ]
}

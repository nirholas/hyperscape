{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Hyperscape",
  "identifier": "com.hyperscape.game",
  "version": "0.13.0",
  "build": {
    "beforeDevCommand": "cd ../client && bun run dev",
    "devUrl": "http://localhost:3333",
    "beforeBuildCommand": "cd ../client && bun run build",
    "frontendDist": "../../client/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Hyperscape",
        "width": 1280,
        "height": 720,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true,
        "visible": true,
        "focus": true,
        "alwaysOnTop": false,
        "contentProtected": false,
        "skipTaskbar": false,
        "windowEffects": {
          "effects": ["mica"],
          "state": "followsWindowActiveState"
        }
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "category": "Game",
    "shortDescription": "3D Multiplayer Game",
    "longDescription": "Hyperscape is a 3D multiplayer game built with WebGPU technology.",
    "copyright": "Â© 2025 Hyperscape",
    "publisher": "Hyperscape",
    "homepage": "https://hyperscape.club",
    "licenseFile": "../../LICENSE",
    "resources": [],
    "externalBin": [],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com",
      "wix": null,
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "headerImage": null,
        "sidebarImage": null,
        "installMode": "currentUser",
        "languages": ["English"],
        "displayLanguageSelector": false
      },
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libgtk-3-0"]
      },
      "rpm": {}
    },
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "minimumSystemVersion": "15.0",
      "signingIdentity": null,
      "providerShortName": null,
      "dmg": {
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 },
        "windowSize": { "width": 660, "height": 400 }
      }
    },
    "iOS": {
      "developmentTeam": null,
      "minimumSystemVersion": "18.0"
    },
    "android": {
      "minSdkVersion": 33
    }
  },
  "plugins": {
    "deep-link": {
      "mobile": [
        { "host": "hyperscape.club", "pathPrefix": ["/auth"] },
        { "host": "auth.hyperscape.club" }
      ],
      "desktop": {
        "schemes": ["hyperscape"]
      }
    },
    "updater": {
      "active": true,
      "pubkey": "",
      "endpoints": [
        "https://releases.hyperscape.club/{{target}}/{{arch}}/{{current_version}}"
      ],
      "dialog": true
    }
  }
}

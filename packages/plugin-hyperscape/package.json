{
  "name": "@hyperscape/plugin-hyperscape",
  "description": "ElizaOS plugin for Hyperscape - AI agents as real players in 3D multiplayer RPG",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "author": "Hyperscape Team",
  "keywords": [
    "elizaos",
    "plugin",
    "hyperscape",
    "ai-agents",
    "multiplayer",
    "rpg",
    "3d"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./frontend": {
      "import": {
        "types": "./dist/frontend/index.d.ts",
        "default": "./dist/frontend/index.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "dependencies": {
    "@elizaos/core": "^1.2.9",
    "@hyperscape/shared": "workspace:*",
    "clsx": "^2.1.1",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.525.0",
    "react": "^19.2.0",
    "tailwind-merge": "^2.5.4",
    "three": "^0.180.0",
    "ws": "^8.18.3",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/node": "^24.8.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/ws": "^8.5.10",
    "playwright": "^1.54.2",
    "typescript": "^5.9.2",
    "vitest": "^4.0.6"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --fix"
  }
}

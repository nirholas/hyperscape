# ===========================================
# ELIZAOS PLUGIN CONFIGURATION
# ===========================================
# Copy this file to .env to customize settings.
# These settings configure the ElizaOS server when running with `bun run dev:ai`.

# ElizaOS API server port (default: 5069)
# Changed from ElizaOS default (3000) to avoid conflicts with other services
PORT=5069
SERVER_PORT=5069

# Hyperscape game server WebSocket URL
# This is where ElizaOS agents connect to play the game
HYPERSCAPE_SERVER_URL=ws://localhost:5555/ws

# Auto-reconnect when disconnected from game server
HYPERSCAPE_AUTO_RECONNECT=true

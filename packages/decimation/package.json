{
  "name": "@hyperscape/decimation",
  "version": "1.0.0",
  "type": "module",
  "description": "Seam-aware mesh decimation that preserves UV boundaries - TypeScript port of SIGGRAPH Asia 2017 paper implementation",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --max-warnings 150",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^24.8.0",
    "@webgpu/types": "^0.1.69",
    "typescript": "^5.9.2",
    "vitest": "^4.0.6"
  },
  "keywords": [
    "mesh",
    "decimation",
    "simplification",
    "seam-aware",
    "uv",
    "texture",
    "3d",
    "geometry"
  ],
  "author": "Hyperscape Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HyperscapeAI/hyperscape.git",
    "directory": "packages/decimation"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

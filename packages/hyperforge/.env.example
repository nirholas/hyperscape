# =============================================================================
# HyperForge Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# REQUIRED: AI & Generation APIs
# -----------------------------------------------------------------------------

# Meshy API for 3D model generation (https://www.meshy.ai)
MESHY_API_KEY=your_meshy_api_key

# Vercel AI Gateway for AI features (text generation, etc.)
AI_GATEWAY_API_KEY=your_ai_gateway_api_key

# -----------------------------------------------------------------------------
# OPTIONAL: Audio Generation
# -----------------------------------------------------------------------------

# ElevenLabs for voice TTS and sound effects (https://elevenlabs.io)
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# -----------------------------------------------------------------------------
# OPTIONAL: Storage (Supabase)
# -----------------------------------------------------------------------------

# Supabase Storage for asset persistence
# If not set, assets are stored locally in public/assets/
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------

# SQLite database path (default works for local dev)
DATABASE_URL=file:./hyperforge.db

# -----------------------------------------------------------------------------
# EXTERNAL SERVICES
# -----------------------------------------------------------------------------

# Game CDN URL for loading existing game assets
NEXT_PUBLIC_CDN_URL=http://localhost:8080

# Game server URL for testing assets in-game
NEXT_PUBLIC_GAME_SERVER_URL=http://localhost:5555

# -----------------------------------------------------------------------------
# DEVELOPMENT
# -----------------------------------------------------------------------------

# Port for HyperForge dev server (default: 3500)
PORT=3500

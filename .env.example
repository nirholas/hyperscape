# =============================================================================
# Hyperscape Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env files with real secrets to version control

# =============================================================================
# Core Configuration
# =============================================================================

# CDN URL for assets (textures, models, manifests)
# Default: http://localhost:8080 (local CDN container)
CDN_URL=http://localhost:8080

# Terrain seed for deterministic world generation
# Optional - defaults to 0 for reproducible terrain
TERRAIN_SEED=0

# Debug mode for RPG systems
# Set to "1" to enable verbose logging
DEBUG_RPG=0

# =============================================================================
# Blockchain / Web3
# =============================================================================

# RPC URL for blockchain connection
# Jeju testnet or local Anvil instance
JEJU_RPC_URL=http://127.0.0.1:9545
ANVIL_RPC_URL=http://127.0.0.1:8545
RPC_URL=

# Chain ID (optional - auto-detected from RPC)
CHAIN_ID=

# MUD World contract address (deployed contracts)
# Required for on-chain features
WORLD_ADDRESS=

# Private key for signing transactions
# WARNING: Never commit real private keys!
# Use a dedicated development key or hardware wallet in production
PRIVATE_KEY=

# =============================================================================
# Session Key Encryption
# =============================================================================

# Secret for encrypting session keys (AES-256-GCM)
# REQUIRED in production - generates secure key storage
# Leave empty for development mode (uses insecure default)
SESSION_KEY_SECRET=

# =============================================================================
# LiveKit Voice Chat
# =============================================================================

# LiveKit server WebSocket URL
LIVEKIT_URL=

# API credentials for token generation
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=

# =============================================================================
# Testing
# =============================================================================

# Skip blockchain tests (no Anvil running)
# Set to "false" to enable blockchain integration tests
SKIP_BLOCKCHAIN_TESTS=true

{
  "name": "@hyperscape/hyperscape",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Hyperscape - AI-powered virtual world with RPG elements",
  "keywords": [
    "hyperscape",
    "virtual-worlds",
    "rpg",
    "ai",
    "elizaos",
    "3d",
    "metaverse"
  ],
  "author": "Hyperscape Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.1.38"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:shared": "cd packages/shared && bun run build",
    "build:client": "cd packages/client && bun run build",
    "build:server": "cd packages/server && bun run build",
    "build:all": "bun run build",
    "predev": "echo 'Skipping predev - using existing localnet'",
    "dev": "bun run dev:jeju",
    "predev:jeju": "bun scripts/dev-setup-jeju.mjs",
    "dev:jeju": "turbo run dev",
    "dev:standalone": "bun scripts/dev-setup.mjs && bun scripts/start-localnet.ts && turbo run dev",
    "localnet": "bun scripts/start-localnet.ts",
    "verify:onchain": "bun scripts/verify-blockchain-integration.ts",
    "dev:all": "turbo run dev",
    "dev:shared": "cd packages/shared && bun run dev",
    "dev:client": "cd packages/client && bun run dev",
    "dev:server": "cd packages/server && bun run dev",
    "dev:reset": "bun run clean && rm -rf packages/*/node_modules/.vite && bun run build:shared && turbo run dev",
    "cdn:up": "bun scripts/cdn.mjs",
    "cdn:down": "cd packages/server && docker-compose down cdn",
    "start": "cd packages/server && bun run start",
    "test": "turbo run test",
    "test:e2e": "playwright test tests/e2e --config=playwright.config.ts",
    "test:e2e:multiplayer": "playwright test tests/e2e/multiplayer-visibility.spec.ts --config=playwright.config.ts",
    "test:e2e:debug": "playwright test tests/e2e/debug-economy-panel.spec.ts --config=playwright.config.ts",
    "test:e2e:ui": "playwright test tests/e2e --config=playwright.config.ts --ui",
    "test:synpress": "playwright test tests/wallet --config=synpress.config.ts",
    "test:contracts": "cd ../../contracts && forge test && cd src/hyperscape && bun run test",
    "test:all": "bun run test && bun run test:e2e",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf test-*.json test-*.png *.log **/*.log test-results packages/docs-site/docs/api",
    "ios": "cd packages/client && bun run ios",
    "ios:dev": "cd packages/client && bun run ios:dev",
    "ios:build": "cd packages/client && bun run ios:build",
    "android": "cd packages/client && bun run android",
    "android:dev": "cd packages/client && bun run android:dev",
    "android:build": "cd packages/client && bun run android:build",
    "cap:sync": "cd packages/client && bun run cap:sync",
    "cap:sync:ios": "cd packages/client && bun run cap:sync:ios",
    "cap:sync:android": "cd packages/client && bun run cap:sync:android",
    "docs:generate": "typedoc",
    "docs:dev": "cd packages/docs-site && bun run start",
    "docs:build": "bun run docs:generate && cd packages/docs-site && bun run build",
    "docs:serve": "cd packages/docs-site && bun run serve",
    "docs:clean": "rm -rf packages/docs-site/docs/api",
    "docs:rebuild": "bun run docs:clean && bun run docs:build",
    "prepare": "husky"
  },
  "devDependencies": {
    "@docusaurus/core": "^3.9.1",
    "@docusaurus/preset-classic": "^3.9.1",
    "@eslint/js": "^9.0.0",
    "@synthetixio/synpress": "^4.1.1",
    "@tenkeylabs/dappwright": "^2.11.3",
    "@types/node": "^24.8.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^4.0.6",
    "@vitest/ui": "^4.0.6",
    "bun-types": "^1.2.20",
    "eslint": "^9.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "puppeteer": "^24.22.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "rollup": "^4.52.4",
    "ts-jest": "^29.1.1",
    "turbo": "^2.5.5",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.2",
    "vitest": "^4.0.6"
  },
  "overrides": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "typescript": "^5.9.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "three": "0.180.0",
    "@types/three": "0.180.0",
    "@pixiv/three-vrm": "3.4.3"
  },
  "packageManager": "bun@1.1.38",
  "lint-staged": {
    "*.{ts,tsx}": "prettier --write",
    "*.{js,jsx}": "prettier --write"
  },
  "dependencies": {
    "@rollup/rollup-darwin-x64": "^4.52.4",
    "@types/pg": "^8.15.5",
    "better-sqlite3": "^12.2.0",
    "canvas": "^3.1.2",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.44.6",
    "pg": "^8.16.3",
    "playwright": "^1.54.2",
    "pngjs": "^7.0.0",
    "three": "^0.180.0",
    "wagmi": "^2.18.2",
    "ws": "^8.18.3"
  }
}

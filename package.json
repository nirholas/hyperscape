{
  "name": "@hyperscape/monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Hyperscape - AI-powered virtual world with RPG elements",
  "keywords": [
    "hyperscape",
    "virtual-worlds",
    "rpg",
    "ai",
    "elizaos",
    "3d",
    "metaverse"
  ],
  "author": "Hyperscape Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=10.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run --filter=@hyperscape/hyperscape build && turbo run --filter=@hyperscape/hyperscape dev",
    "start": "node start-hyperscape-agents.mjs",
    "test": "turbo run --filter=@hyperscape/hyperscape test",
    "test:headed": "turbo run --filter=@hyperscape/hyperscape test:headed",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf test-*.json test-*.png *.log **/*.log test-results",
    "status": "echo 'âœ… Hyperscape RPG - Production Ready' && cat .production-ready"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^22.9.3",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.1",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "typescript": "^5.9.2"
  },
  "packageManager": "bun@1.0.0",
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "canvas": "^3.1.2",
    "playwright": "^1.54.2",
    "pngjs": "^7.0.0",
    "ws": "^8.18.3"
  }
}
